<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/colorPrimaryDark">

    <com.wjx.android.lib_circularavatar.CustomUserAvatar
        android:id="@+id/me_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="16dp"
        app:background_color="@color/always_white_text"
        app:background_style="0"
        app:text_color="@color/always_white_text"
        app:chinese_name="1"
        app:english_name="1"
        app:show_blur_Mask="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/me_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/always_white_text"
        app:layout_constraintStart_toEndOf="@+id/me_image"
        app:layout_constraintTop_toTopOf="@id/me_image"
        app:layout_constraintBottom_toTopOf="@+id/me_info" />

    <TextView
        android:id="@+id/me_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="账户id : --"
        android:textColor="@color/always_white_text"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/me_image"
        app:layout_constraintStart_toEndOf="@+id/me_image"
        app:layout_constraintTop_toBottomOf="@+id/me_name" />

</androidx.constraintlayout.widget.ConstraintLayout>

